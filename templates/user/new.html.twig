{% extends 'base.html.twig' %}


{% block title %}Inscription{% endblock %}

{% block stylesheets %}
{{ encore_entry_link_tags('form') }}
{% endblock %}

{% block body %}


 
<div class="container container-form-custum">
    {{ form_start(form) }}
    
        <div class="block-form-custum">
            <div class="col-12">
                {{ form_row(form.username)}}
         
            </div>
            <div class="col-12">
                {{ form_row(form.email)}}
         
            </div>
            <div class="col-12">
                {{ form_row(form.plain_password)}}
         
            </div>
            <div class="col-12">
                {{ form_label(form.birth_date)}} 
                <div class="input-birth-date">
                    {{ form_widget(form.birth_date)}}  
                </div>  
            </div>
            <div class="col-12">
                {{ form_row(form.Envoyer) }}
            </div>
        </div>
    {{ form_end(form) }}

</div>


{% endblock %}

{% block javascripts %}
{{ encore_entry_script_tags('form') }}
{% endblock %}