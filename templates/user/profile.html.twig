{% extends 'base.html.twig' %}


{% block title %}Mon profile{% endblock %}



{% block body %}
<div>
    <h2>Information générales</h2>
    <p>Pseudo : {{user.viewUsername}}</p>
    <p>Adresse email :  {{user.email}}</p>
    <p>Date de naissance : {{user.birthDate|date("m/d/Y", "Europe/Paris")}}</p>
</div>

<div>
    <h2>Vos articles</h2>
