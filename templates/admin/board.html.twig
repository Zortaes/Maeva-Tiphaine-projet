{% extends 'base.html.twig' %}


{% block title %}Admin Board{% endblock %}

{% block stylesheets %}
{{ parent()}}
{{ encore_entry_link_tags('board') }}
{% endblock %}

{% block body %}

<!-- users -->
<div class="d-flex flex-column flex-md-row">
    <div class="card card-custum">
        <img class="card img-fluid" src="{{ asset("build/images/iconUser.png") }} "
            alt="image represent icon user avatar">
        <div class="card-body">
            <h5 class="card-title text-center">Tous les utilisateurs</h5>
            <a href="{{path('showUsers')}}" class="btn btn-primary">Voir</a>
        </div>
    </div>
<!-- flagged articles -->
    <div class="card card-custum">
        <img class="card img-fluid" src="{{ asset("build/images/articlesFlag.jpg") }} "
            alt="image represent an alert for articles flags">
        <div class="card-body">
            <h5 class="card-title text-center">Tous les articles signalés</h5>
            <a href="{{path('articlesFlagged')}}" class="btn btn-primary">Voir</a>
        </div>
    </div>
<!-- flagged feedback -->
    <div class="card card-custum">
        <img class="card img-fluid" src="{{ asset("build/images/caution.png") }} "
            alt="image represent icon user avatar">
        <div class="card-body">
            <h5 class="card-title text-center">Tous les commentaires signalés</h5>
            <a href="{{path('feedbackFlagged')}}" class="btn btn-primary">Voir</a>
        </div>
    </div>

</div>



{% endblock %}